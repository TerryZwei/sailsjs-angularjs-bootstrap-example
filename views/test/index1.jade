extends ../layout

block body
	#ctrl-as-exmpl(ng-controller="SettingsController1 as settings")
		label Name:
			input(type="text" ,ng-model="settings.name")
		button(ng-click="settings.greet()") greet
		div Contact:
		ul
			li(ng-repeat="contact in settings.contacts")
				select(ng-model="contact.type" ,aria-label="Contact method" ,id="select_{{$index}}")
					option phone
					option email
				input(type="text" ,ng-model="contact.value" ,aria-labelledby="select_{{$index}}")
				button(ng-click="settings.clearContact(contact)") clear
				button(ng-click="settings.removeContact(contact)" ,aria-label="Remove") X
			li
				button(ng-click="settings.addContact()") add
	#ctrl-as-bindexmpl(ng-controller="SettingsController2")
		span name:
		input(type="text",ng-model="name")
		p(ng-bind="name")
script(type="text/javascript", src="/linker/js/test/index1.js")